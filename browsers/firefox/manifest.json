{
    "manifest_version": 3,
    "name": "ChatGPT Speed Booster",
    "version": "1.0.0",
    "description": "Speeds up ChatGPT by lazily loading conversation messages. Only the last N messages are shown; scroll up to load more.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://chatgpt.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "ChatGPT Speed Booster"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "chatgpt-speed-booster@extension",
            "strict_min_version": "109.0"
        }
    }
}